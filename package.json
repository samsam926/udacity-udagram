{
  "scripts": {
    "backend:install": "cd udagram-api && npm install --reg https://registry.npmjs.org",
    "frontend:install": "cd udagram-frontend && npm install --legacy-peer-deps --reg https://registry.npmjs.org",
    "backend:build": "cd udagram-api && npm run build",
    "frontend:build": "NODE_OPTIONS=--openssl-legacy-provider && cd udagram-frontend && npm run build",
    "backend:deploy": "cd udagram-api && npm run deploy",
    "frontend:deploy": "cd udagram-frontend && npm run deploy",
    "backend:test": "cd udagram-api && npm run test",
    "frontend:test": "cd udagram-frontend && npm run test"
  }
}
